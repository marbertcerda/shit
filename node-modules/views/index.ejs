<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>To-Do List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        
        /* Your CSS styles here */
        .form-container {
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background: linear-gradient(to bottom, #3498db, #f5f5f5); /* Adjust the colors as needed */
        }

        .task-list {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            width: 70%; /* Adjust the width as needed, e.g., 80% */
            margin: 10px;
        }
        
    </style>
</head>
<body>
    
    <div class="form-container">
        <h1>To-Do List</h1><br><br><br>
        <div class="add-task-container">
            <h2>Add a New Task</h2><br>
            <form action="/addTask" method="post">
                <input type="text" name="task" placeholder="Enter a new task" required/>
                <button type="submit" class="btn btn-success">Add</button>
            </form>
        </div>
        
        <div class="task-list">
            <h2>Task List</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Task Description</th>
                        <th>Complete</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% tasks.forEach((task, index) => { %>
                        <tr>
                            <td><%= task.description %></td>
                            <td>
                                <form action="/completeTask/<%= index %>" method="post">
                                    <input type="checkbox" name="completed" <%= task.completed ? 'checked' : '' %> onchange="this.form.submit()" />
                                </form>
                            </td>
                            
                            <td>
                                <a href="/editTask/<%= index %>" class="btn btn-primary">Edit</a>
                                <a href="/deleteTask/<%= index %>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
    </div>
</body>
</html>
